@model List<Person>

@foreach (var item in Model)
{
    <div class="section pt-4 px-3 px-lg-4" id="about">
        <div class="container-narrow">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h4 my-2">Merhaba ben, @item.Name</h2>
                    <p>@item.SelfDescription.</p>
                    <div class="row mt-3">
                        <div class="col-sm-2">
                            <div class="pb-1">Yaş:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Age</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Mail:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Email</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">LinkedIn:</div>
                        </div>

                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder"> <a href="@item.LinkedInUrl">LinkedIn</a></div>
                        </div>

                        <div class="col-sm-2">
                            <div class="pb-1">Github:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder"> <a href="@item.GithubUrl">Github</a></div>
                        </div>

                        <div class="col-sm-2">
                            <div class="pb-1">Telefon:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Phone</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Muhit:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.City, @item.Country</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Cinsiyet:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Gender</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Kilo:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Weight KG</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Boy:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Height CM</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@item.PhotoUrl" width="400" height="400" alt="Walter Patterson" /></div>
            </div>
        </div>
    </div>
}